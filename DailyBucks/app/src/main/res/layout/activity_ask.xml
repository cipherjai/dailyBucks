<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.natasha.dailybucks.Ask">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ask_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Manage.Track.Save"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#797979"
        android:textStyle="bold"
        android:textSize="15dp"
        android:paddingTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tired of calculating your bills, savings and tracking your expenses? Now track all your expenses and bills, credit and debit, set your reminders and mangage all your money at one place! It&apos;s hassle free and most importantly, Free!"
        android:id="@+id/textView2"
        android:gravity="center"
        android:paddingTop="8dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:paddingBottom="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE A FREE ACCOUNT"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:background="#0088ff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:elevation="4px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Already a member?"
        android:id="@+id/textView3"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login."
        android:id="@+id/textView4"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/textView3"
        android:paddingTop="15dp"
        android:paddingLeft="4dp"
        android:textColor="#009dff" />

</RelativeLayout>
