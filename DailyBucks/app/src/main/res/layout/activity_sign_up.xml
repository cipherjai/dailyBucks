<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.natasha.dailybucks.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/acc_su"
                android:layout_marginStart="108dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView9"
                android:text="@string/signUp"
                android:paddingTop="5dp"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please provide in wth your personal details to create a free account !"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="46dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="5dp" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_below="@+id/textView11"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textinput"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:hint="Eg. John Smith" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Username or Email"
                android:id="@+id/textView12"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/editText3"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textinput"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:hint="Someone@example.com"
                android:layout_below="@+id/textView12"
                android:layout_alignEnd="@+id/imageView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Create Password"
                android:id="@+id/textView13"
                android:layout_below="@+id/editText4"
                android:layout_alignStart="@+id/textView14"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set a password atleast 6 digits long, max 9 digits."
                android:id="@+id/textView14"
                android:layout_below="@+id/textView13"
                android:layout_alignStart="@+id/textView16" />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_below="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:background="@drawable/textinput"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:id="@+id/textView15"
                android:paddingTop="10dp"
                android:layout_below="@+id/editText5"
                android:layout_alignStart="@+id/editText5" />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText6"
                android:layout_below="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:layout_marginTop="5dp"
                android:background="@drawable/textinput" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/ic_vis"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:clickable="true"
                android:layout_above="@+id/textView15"
                android:layout_toEndOf="@+id/editText5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_alignBottom="@+id/editText6"
                android:layout_toEndOf="@+id/editText6"
                android:src="@drawable/ic_vis"
                android:layout_marginLeft="10dp"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Card(optional)"
                android:id="@+id/textView16"
                android:layout_below="@+id/editText6"
                android:layout_alignStart="@+id/editText3"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can also add card later from the home menu."
                android:id="@+id/textView17"
                android:layout_below="@+id/textView16"
                android:layout_alignStart="@+id/textView16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@drawable/add_card"
                android:clickable="true"
                android:layout_below="@+id/textView17"
                android:layout_toEndOf="@+id/textView11"
                android:layout_marginTop="30dp" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="PROCEED"
                android:id="@+id/button3"
                android:background="#0087fd"
                android:textColor="#ffffff"
                android:layout_below="@+id/imageView7"
                android:layout_alignEnd="@+id/imageView6"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Registered ?"
                android:id="@+id/textView18"
                android:layout_alignTop="@+id/textView19"
                android:layout_alignEnd="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In."
                android:id="@+id/textView19"
                android:layout_below="@+id/button3"
                android:layout_toEndOf="@+id/textView18"
                android:layout_marginTop="25dp"
                android:textColor="#0087fd"
                android:paddingLeft="5dp"/>


        </RelativeLayout>
    </ScrollView>


</LinearLayout>
